# Function to validate domain
validate_domain() {
    local domain="$1"
    if echo "$domain" | grep -E '^[a-zA-Z0-9]([a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(\.[a-zA-Z0-9]([a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)*$' >/dev/null; then
        return 0
    else
        echo -e "${RED}‚ùå Invalid domain format${NC}"
        return 1
    fi
}

# Function to validate boolean
validate_boolean() {
    local value="$1"
    case "${value}" in
        true|TRUE|false|FALSE)
            echo "${value}" | tr '[:upper:]' '[:lower:]'
            return 0
            ;;
        *)
            echo -e "${RED}‚ùå Invalid boolean value. Use 'true' or 'false'${NC}"
            return 1
            ;;
    esac
}

# Function to prompt for a value
prompt_for_value() {
    local var_name="$1"
    local description="$2"
    local current_value="$3"
    local is_secret="$4"
    
    echo -e "${PURPLE}üîπ $var_name${NC}"
    echo -e "   $description"
    
    if [ -n "$current_value" ]; then
        local display_value="$current_value"
        if [ "$is_secret" = "true" ]; then
            display_value="${current_value:0:8}..."
        fi
        echo -e "   Current value: $display_value"
        echo -n "   Keep current value? [Y/n]: "
        read -r keep_current
        case "$keep_current" in
            [Nn]|[Nn][Oo])
                current_value=""
                ;;
            *)
                echo "$current_value"
                return
                ;;
        esac
    fi
    
    echo -n "   Enter value: "
    if [ "$is_secret" = "true" ]; then
        read -s new_value
        echo ""
    else
        read -r new_value
    fi
    
    echo "$new_value"
}

# Function to check if all required vars are set
check_required_vars() {
    local missing_vars=""
    
    if ! is_var_set "SAURON_DOMAIN"; then
        missing_vars="$missing_vars SAURON_DOMAIN"
    fi
    
    if ! is_var_set "CLOUDFLARE_API_TOKEN"; then
        missing_vars="$missing_vars CLOUDFLARE_API_TOKEN"
    fi
    
    if ! is_var_set "TURNSTILE_SECRET"; then
        missing_vars="$missing_vars TURNSTILE_SECRET"
    fi
    
    if [ -n "$missing_vars" ]; then
        echo -e "${RED}‚ùå Missing required variables:$missing_vars${NC}"
        return 1
    fi
    
    echo -e "${GREEN}‚úÖ All required variables are set${NC}"
    return 0
}

